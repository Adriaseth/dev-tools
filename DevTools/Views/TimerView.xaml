<UserControl x:Class="DevTools.Views.TimerView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
	<Grid>
		<Button HorizontalAlignment="Left" Margin="222,192,0,0" VerticalAlignment="Top" Height="88"
		        Width="204">
			<Button x:Name="BtnStartTimer" Content="Start" Height="84" Width="200" Click="btnStartTimer_Click" />
		</Button>
		<Label Content="{Binding StandText}" HorizontalAlignment="Left" Margin="254,45,0,0"
		       VerticalAlignment="Top" RenderTransformOrigin="-3.124,-0.423" Height="25" Width="92" />
		<Button x:Name="BtnStandSubtract" Content="-" HorizontalAlignment="Left" Margin="165,48,0,0" VerticalAlignment="Top"
		        Width="35" Height="20" Click="btnStandSubtract_Click" />
		<Button x:Name="BtnStandAdd" Content="+" HorizontalAlignment="Left" Margin="205,48,0,0" VerticalAlignment="Top"
		        RenderTransformOrigin="1,-0.202" Height="20" Width="35" Click="btnStandAdd_Click" />
		<Label Content="Staan" HorizontalAlignment="Left" Margin="91,43,0,0"
		       VerticalAlignment="Top" />
		<Label Content="Zitten" HorizontalAlignment="Left" Margin="91,79,0,0" VerticalAlignment="Top" />
		<Label Content="{Binding SitText}" HorizontalAlignment="Left" Margin="260,79,0,0" VerticalAlignment="Top"
		       RenderTransformOrigin="-3.124,-0.423" Height="25" Width="92" />
		<Button x:Name="BtnSitSubtract" Content="-" HorizontalAlignment="Left" Margin="165,82,0,0" VerticalAlignment="Top"
		        Width="35" Height="20" Click="btnSitSubtract_Click" />
		<Button x:Name="BtnSitAdd" Content="+" HorizontalAlignment="Left" Margin="205,82,0,0" VerticalAlignment="Top"
		        RenderTransformOrigin="1,-0.202" Height="20" Width="35" Click="btnSitAdd_Click" />
		<Label Content="{Binding RemainingText}" HorizontalAlignment="Left" Margin="451,64,0,0"
		       VerticalAlignment="Top" />
	</Grid>
</UserControl>