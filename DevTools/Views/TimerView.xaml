<UserControl x:Class="DevTools.Views.TimerView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="Transparent">

	<UserControl.Resources>
		<!-- Small Action Button -->
		<Style x:Key="ActionButton" TargetType="Button">
			<Setter Property="Background" Value="#44222222"/>
			<Setter Property="Foreground" Value="White"/>
			<Setter Property="FontSize" Value="20"/>
			<Setter Property="BorderThickness" Value="0"/>
			<Setter Property="Cursor" Value="Hand"/>
			<Setter Property="Height" Value="40"/>
			<Setter Property="Width" Value="50"/>
			<Setter Property="Margin" Value="2"/>
			<Setter Property="Template">
				<Setter.Value>
					<ControlTemplate TargetType="Button">
						<Border Background="{TemplateBinding Background}" CornerRadius="6" Padding="5">
							<ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
						</Border>
						<ControlTemplate.Triggers>
							<Trigger Property="IsMouseOver" Value="True">
								<Setter Property="Background" Value="#77FFFFFF"/>
								<Setter Property="Foreground" Value="Black"/>
							</Trigger>
							<Trigger Property="IsPressed" Value="True">
								<Setter Property="Background" Value="#AAFFFFFF"/>
							</Trigger>
							<Trigger Property="IsEnabled" Value="False">
								<Setter Property="Background" Value="#22333333"/>
								<Setter Property="Foreground" Value="#888888"/>
							</Trigger>
						</ControlTemplate.Triggers>
					</ControlTemplate>
				</Setter.Value>
			</Setter>
		</Style>

		<!-- Start/Stop Button Style -->
		<Style x:Key="StartStopButton" TargetType="Button">
			<Setter Property="Height" Value="80"/>
			<Setter Property="MinWidth" Value="300"/>
			<Setter Property="MaxWidth" Value="500"/>
			<Setter Property="FontSize" Value="24"/>
			<Setter Property="Foreground" Value="White"/>
			<Setter Property="BorderThickness" Value="0"/>
			<Setter Property="Cursor" Value="Hand"/>
			<Setter Property="Background" Value="#DD222222"/>
			<Setter Property="Padding" Value="10,10"/>
			<Setter Property="HorizontalAlignment" Value="Center"/>
			<Setter Property="Template">
				<Setter.Value>
					<ControlTemplate TargetType="Button">
						<Border Background="{TemplateBinding Background}" CornerRadius="12" Padding="{TemplateBinding Padding}">
							<ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
						</Border>
						<ControlTemplate.Triggers>
							<Trigger Property="IsMouseOver" Value="True">
								<Setter Property="Background" Value="#77FFFFFF"/>
								<Setter Property="Foreground" Value="Black"/>
							</Trigger>
							<Trigger Property="IsPressed" Value="True">
								<Setter Property="Background" Value="#AAFFFFFF"/>
							</Trigger>
						</ControlTemplate.Triggers>
					</ControlTemplate>
				</Setter.Value>
			</Setter>
		</Style>
	</UserControl.Resources>

	<Border Background="#DD252525"
            CornerRadius="12"
            Padding="30">
		<Grid VerticalAlignment="Stretch" HorizontalAlignment="Stretch">
			<Grid.RowDefinitions>
				<RowDefinition Height="Auto"/>
				<RowDefinition Height="20"/>
				<RowDefinition Height="Auto"/>
				<RowDefinition Height="10"/>
				<RowDefinition Height="Auto"/>
				<RowDefinition Height="10"/>
				<RowDefinition Height="Auto"/>
				<RowDefinition Height="*"/>
				<RowDefinition Height="Auto"/>
			</Grid.RowDefinitions>

			<Grid.ColumnDefinitions>
				<ColumnDefinition Width="150"/>
				<ColumnDefinition Width="*"/>
				<ColumnDefinition Width="*"/>
				<ColumnDefinition Width="120"/>
			</Grid.ColumnDefinitions>

			<!-- TITLE -->
			<TextBlock Text="Timer Instellingen"
                       FontSize="32"
                       FontWeight="Bold"
                       Foreground="White"
                       Grid.ColumnSpan="4"
                       Margin="0,0,0,20"/>

			<!-- STAAN -->
			<TextBlock Text="Staan"
			           Foreground="White"
			           FontSize="20"
			           VerticalAlignment="Center"
			           Grid.Row="2" Grid.Column="0" />

			<StackPanel Grid.Row="2" Grid.Column="1" Grid.ColumnSpan="3"
			            Orientation="Horizontal" HorizontalAlignment="Left"
			            VerticalAlignment="Center" Margin="10,0">
				<Button Content="-" Style="{StaticResource ActionButton}" Click="btnStandSubtract_Click"
				        IsEnabled="{Binding IsNotRunning}" />
				<Button Content="+" Style="{StaticResource ActionButton}" Click="btnStandAdd_Click"
				        Margin="5,0,10,0"
				        IsEnabled="{Binding IsNotRunning}" />
				<TextBlock Text="{Binding StandText}"
				           Foreground="#4CAF50"
				           FontSize="20"
				           FontWeight="Bold"
				           VerticalAlignment="Center"
				           Margin="5,0,0,0" />
			</StackPanel>

			<!-- ZITTEN -->
			<TextBlock Text="Zitten"
			           Foreground="White"
			           FontSize="20"
			           VerticalAlignment="Center"
			           Grid.Row="4" Grid.Column="0" />

			<StackPanel Grid.Row="4" Grid.Column="1" Grid.ColumnSpan="3"
			            Orientation="Horizontal" HorizontalAlignment="Left"
			            VerticalAlignment="Center" Margin="10,0">
				<Button Content="-" Style="{StaticResource ActionButton}" Click="btnSitSubtract_Click"
				        IsEnabled="{Binding IsNotRunning}" />
				<Button Content="+" Style="{StaticResource ActionButton}" Click="btnSitAdd_Click"
				        Margin="5,0,10,0"
				        IsEnabled="{Binding IsNotRunning}" />
				<TextBlock Text="{Binding SitText}"
				           Foreground="#4CAF50"
				           FontSize="20"
				           FontWeight="Bold"
				           VerticalAlignment="Center"
				           Margin="5,0,0,0" />
			</StackPanel>


			<!-- REMAINING -->
			<TextBlock Text="{Binding RemainingText}"
                       Foreground="White"
                       FontSize="24"
                       FontWeight="SemiBold"
                       Grid.Row="6"
                       Grid.ColumnSpan="4"
                       HorizontalAlignment="Center"
                       Margin="0,20"/>

			<!-- START/STOP BUTTON -->
			<Button Content="{Binding StartStopText}"
                    Style="{StaticResource StartStopButton}"
                    Grid.Row="8"
                    Grid.ColumnSpan="4"
                    Background="{Binding StartStopColor}"
                    Click="btnStartStopTimer_Click"/>
		</Grid>
	</Border>
</UserControl>
