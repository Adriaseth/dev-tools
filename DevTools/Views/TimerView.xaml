<UserControl x:Class="DevTools.Views.TimerView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="Transparent">

	<UserControl.Resources>

		<!-- Small action buttons -->
		<Style x:Key="ActionButton" TargetType="Button">
			<Setter Property="Background" Value="#2A2E33"/>
			<Setter Property="Foreground" Value="#EFFFFFFF"/>
			<Setter Property="FontSize" Value="18"/>
			<Setter Property="BorderThickness" Value="0"/>
			<Setter Property="Cursor" Value="Hand"/>
			<Setter Property="Height" Value="38"/>
			<Setter Property="Width" Value="48"/>
			<Setter Property="Margin" Value="2"/>
			<Setter Property="Template">
				<Setter.Value>
					<ControlTemplate TargetType="Button">
						<Border Background="{TemplateBinding Background}"
                                CornerRadius="6">
							<ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
						</Border>
						<ControlTemplate.Triggers>
							<Trigger Property="IsMouseOver" Value="True">
								<Setter Property="Background" Value="#3A4046"/>
							</Trigger>
							<Trigger Property="IsPressed" Value="True">
								<Setter Property="Background" Value="#4A5057"/>
							</Trigger>
							<Trigger Property="IsEnabled" Value="False">
								<Setter Property="Background" Value="#1F2327"/>
								<Setter Property="Foreground" Value="#777777"/>
							</Trigger>
						</ControlTemplate.Triggers>
					</ControlTemplate>
				</Setter.Value>
			</Setter>
		</Style>

		<!-- Primary start/stop button -->
		<Style x:Key="StartStopButton" TargetType="Button">
			<Setter Property="Height" Value="72"/>
			<Setter Property="MinWidth" Value="260"/>
			<Setter Property="MaxWidth" Value="420"/>
			<Setter Property="FontSize" Value="22"/>
			<Setter Property="Foreground" Value="White"/>
			<Setter Property="BorderThickness" Value="0"/>
			<Setter Property="Cursor" Value="Hand"/>
			<Setter Property="Padding" Value="12"/>
			<Setter Property="HorizontalAlignment" Value="Center"/>
			<Setter Property="Template">
				<Setter.Value>
					<ControlTemplate TargetType="Button">
						<Border Background="{TemplateBinding Background}"
                                CornerRadius="10">
							<ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
						</Border>
						<ControlTemplate.Triggers>
							<Trigger Property="IsMouseOver" Value="True">
								<Setter Property="Opacity" Value="0.9"/>
							</Trigger>
							<Trigger Property="IsPressed" Value="True">
								<Setter Property="Opacity" Value="0.8"/>
							</Trigger>
						</ControlTemplate.Triggers>
					</ControlTemplate>
				</Setter.Value>
			</Setter>
		</Style>

	</UserControl.Resources>

	<!-- CONTENT ONLY (no card background) -->
	<Grid Margin="10">

		<Grid.RowDefinitions>
			<RowDefinition Height="Auto"/>
			<RowDefinition Height="24"/>
			<RowDefinition Height="Auto"/>
			<RowDefinition Height="12"/>
			<RowDefinition Height="Auto"/>
			<RowDefinition Height="24"/>
			<RowDefinition Height="Auto"/>
			<RowDefinition Height="*"/>
			<RowDefinition Height="Auto"/>
		</Grid.RowDefinitions>

		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="160"/>
			<ColumnDefinition Width="*"/>
		</Grid.ColumnDefinitions>

		<!-- TITLE -->
		<TextBlock Text="Timer instellingen"
                   FontSize="28"
                   FontWeight="SemiBold"
                   Foreground="#F0FFFFFF"
                   Grid.ColumnSpan="2"
                   Margin="0,0,0,12"/>

		<!-- STAAN -->
		<TextBlock Text="Staan"
                   Foreground="#DDEFFFFF"
                   FontSize="18"
                   VerticalAlignment="Center"
                   Grid.Row="2" Grid.Column="0"/>

		<StackPanel Grid.Row="2" Grid.Column="1"
                    Orientation="Horizontal"
                    VerticalAlignment="Center">
			<Button Content="−"
                    Style="{StaticResource ActionButton}"
                    Click="btnStandSubtract_Click"
                    IsEnabled="{Binding IsNotRunning}"/>
			<Button Content="+"
                    Style="{StaticResource ActionButton}"
                    Click="btnStandAdd_Click"
                    Margin="6,0,12,0"
                    IsEnabled="{Binding IsNotRunning}"/>

			<TextBlock Text="{Binding StandText}"
                       Foreground="#6FD18C"
                       FontSize="18"
                       FontWeight="SemiBold"
                       VerticalAlignment="Center"/>
		</StackPanel>

		<!-- ZITTEN -->
		<TextBlock Text="Zitten"
                   Foreground="#DDEFFFFF"
                   FontSize="18"
                   VerticalAlignment="Center"
                   Grid.Row="4" Grid.Column="0"/>

		<StackPanel Grid.Row="4" Grid.Column="1"
                    Orientation="Horizontal"
                    VerticalAlignment="Center">
			<Button Content="−"
                    Style="{StaticResource ActionButton}"
                    Click="btnSitSubtract_Click"
                    IsEnabled="{Binding IsNotRunning}"/>
			<Button Content="+"
                    Style="{StaticResource ActionButton}"
                    Click="btnSitAdd_Click"
                    Margin="6,0,12,0"
                    IsEnabled="{Binding IsNotRunning}"/>

			<TextBlock Text="{Binding SitText}"
                       Foreground="#6FD18C"
                       FontSize="18"
                       FontWeight="SemiBold"
                       VerticalAlignment="Center"/>
		</StackPanel>

		<!-- REMAINING -->
		<TextBlock Text="{Binding RemainingText}"
                   Foreground="#F0FFFFFF"
                   FontSize="22"
                   FontWeight="SemiBold"
                   Grid.Row="6"
                   Grid.ColumnSpan="2"
                   HorizontalAlignment="Center"
                   Margin="0,16"/>

		<!-- START / STOP -->
		<Button Content="{Binding StartStopText}"
                Style="{StaticResource StartStopButton}"
                Grid.Row="8"
                Grid.ColumnSpan="2"
                Background="{Binding StartStopColor}"
                Click="btnStartStopTimer_Click"/>
	</Grid>
</UserControl>
