<UserControl x:Class="DevTools.Views.TimerView"
			 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
			 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
			 Background="#252525">

	<Grid Margin="40"
          VerticalAlignment="Stretch"
          HorizontalAlignment="Stretch">

		<Grid.RowDefinitions>
			<RowDefinition Height="Auto"/>
			<RowDefinition Height="40"/>
			<RowDefinition Height="Auto"/>
			<RowDefinition Height="20"/>
			<RowDefinition Height="Auto"/>
			<RowDefinition Height="40"/>
			<RowDefinition Height="Auto"/>
			<RowDefinition Height="*"/>
			<!-- This makes bottom space flexible -->
			<RowDefinition Height="Auto"/>
		</Grid.RowDefinitions>

		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="150"/>
			<ColumnDefinition Width="*"/>
			<ColumnDefinition Width="*"/>
			<ColumnDefinition Width="120"/>
		</Grid.ColumnDefinitions>

		<!-- TITLE -->
		<TextBlock Text="Timer instellingen"
                   FontSize="32"
                   Foreground="White"
                   FontWeight="Bold"
                   Grid.ColumnSpan="4" />


		<!-- STAAN -->
		<TextBlock Text="Staan"
		           Foreground="White"
		           FontSize="20"
		           VerticalAlignment="Center"
		           Grid.Row="2" />

		<StackPanel Grid.Row="2" Grid.Column="1" Grid.ColumnSpan="2"
		            Orientation="Horizontal" HorizontalAlignment="Left"
		            Margin="10 0">
			<Button Content="-"
			        Width="50"
			        Height="38"
			        Click="btnStandSubtract_Click"
					IsEnabled="{Binding IsNotRunning}" />
			<Button Content="+"
			        Width="50"
			        Height="38"
			        Margin="5 0 0 0"
			        Click="btnStandAdd_Click"
					IsEnabled="{Binding IsNotRunning}" />
		</StackPanel>

		<TextBlock Text="{Binding StandText}"
		           Foreground="#4CAF50"
		           FontSize="20"
		           FontWeight="Bold"
		           VerticalAlignment="Center"
		           Grid.Row="2"
		           Grid.Column="3" />

		<!-- ZITTEN -->
		<TextBlock Text="Zitten"
		           Foreground="White"
		           FontSize="20"
		           VerticalAlignment="Center"
		           Grid.Row="4" />

		<StackPanel Grid.Row="4" Grid.Column="1" Grid.ColumnSpan="2"
		            Orientation="Horizontal" HorizontalAlignment="Left"
		            Margin="10 0">
			<Button Content="-"
			        Width="50"
			        Height="38"
			        Click="btnSitSubtract_Click"
					IsEnabled="{Binding IsNotRunning}" />
			<Button Content="+"
			        Width="50"
			        Height="38"
			        Margin="5 0 0 0"
			        Click="btnSitAdd_Click"
					IsEnabled="{Binding IsNotRunning}" />
		</StackPanel>

		<TextBlock Text="{Binding SitText}"
		           Foreground="#4CAF50"
		           FontSize="20"
		           FontWeight="Bold"
		           VerticalAlignment="Center"
		           Grid.Row="4"
		           Grid.Column="3" />



		<!-- REMAINING -->
		<TextBlock Text="{Binding RemainingText}"
                   Foreground="White"
                   FontSize="24"
                   FontWeight="SemiBold"
                   Grid.Row="6"
                   Grid.ColumnSpan="4"
                   HorizontalAlignment="Center" />


		<!-- START/STOP BUTTON -->
		<Button Content="{Binding StartStopText}"
                Grid.Row="8"
                Grid.ColumnSpan="4"
                Height="65"
                MinWidth="200"
                MaxWidth="350"
                Background="{Binding StartStopColor}"
                Foreground="White"
                FontSize="22"
                BorderThickness="0"
                Cursor="Hand"
                HorizontalAlignment="Center"
                Click="btnStartStopTimer_Click" />
	</Grid>

</UserControl>
