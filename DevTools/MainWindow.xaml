<Window x:Class="DevTools.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DevTools"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
	<Grid>
		<Grid.ColumnDefinitions>
			<ColumnDefinition/>
			<ColumnDefinition Width="3*"/>
		</Grid.ColumnDefinitions>
		<Button HorizontalAlignment="Left" Margin="222,192,0,0" VerticalAlignment="Top" Grid.Column="1" Height="88" Width="204">
			<Button x:Name="btnStartTimer" Content="Start" Height="84" Width="200" Click="btnStartTimer_Click"/>
		</Button>
		<Label x:Name="lblTimerStand" Content="00:00:00" HorizontalAlignment="Center" Margin="0,45,0,0" VerticalAlignment="Top" RenderTransformOrigin="-3.124,-0.423" Height="25" Width="92" Grid.Column="1"/>
		<Button x:Name="btnStandSubtract" Content="-" HorizontalAlignment="Left" Margin="165,48,0,0" VerticalAlignment="Top" Width="35" Grid.Column="1" Height="20" Click="btnStandSubtract_Click"/>
		<Button x:Name="btnStandAdd" Content="+" HorizontalAlignment="Left" Margin="205,48,0,0" VerticalAlignment="Top" RenderTransformOrigin="1,-0.202" Height="20" Width="35" Grid.Column="1" Click="btnStandAdd_Click"/>
		<Label x:Name="___No_Name_" Grid.Column="1" Content="Staan" HorizontalAlignment="Left" Margin="91,43,0,0" VerticalAlignment="Top"/>
		<Label Grid.Column="1" Content="Zitten" HorizontalAlignment="Left" Margin="91,79,0,0" VerticalAlignment="Top"/>
		<Label x:Name="lblTimerSit" Content="00:00:00" HorizontalAlignment="Center" Margin="0,79,0,0" VerticalAlignment="Top" RenderTransformOrigin="-3.124,-0.423" Height="25" Width="92" Grid.Column="1"/>
		<Button x:Name="btnSitSubtract" Content="-" HorizontalAlignment="Left" Margin="165,82,0,0" VerticalAlignment="Top" Width="35" Grid.Column="1" Height="20" Click="btnSitSubtract_Click"/>
		<Button x:Name="btnSitAdd" Content="+" HorizontalAlignment="Left" Margin="205,82,0,0" VerticalAlignment="Top" RenderTransformOrigin="1,-0.202" Height="20" Width="35" Grid.Column="1" Click="btnSitAdd_Click"/>
		<Label x:Name="lblTimer" Grid.Column="1" Content="00:00:00" HorizontalAlignment="Left" Margin="451,64,0,0" VerticalAlignment="Top"/>

	</Grid>
</Window>
