<Window x:Class="DevTools.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DevTools"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
	<Grid>
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="250"/>
			<ColumnDefinition Width="*"/>
		</Grid.ColumnDefinitions>
		<ListBox x:Name="Menu"
		         SelectionChanged="Menu_OnSelectionChanged"
		         Background="#333"
		         Foreground="White"
		         FontSize="18">
			<ListBoxItem Tag="Home">Home</ListBoxItem>
			<ListBoxItem Tag="Timer">Timer</ListBoxItem>
			<ListBoxItem Tag="Water">Water</ListBoxItem>
		</ListBox>
		<ContentControl x:Name="MainContent" Grid.Column="1"></ContentControl>
	</Grid>
</Window>
