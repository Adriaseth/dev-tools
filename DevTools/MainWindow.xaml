<Window x:Class="SitStandApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SitStandApp"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="309*"/>
            <ColumnDefinition Width="491*"/>
        </Grid.ColumnDefinitions>
        <Button HorizontalAlignment="Left" Margin="298,230,0,0" VerticalAlignment="Top" Grid.ColumnSpan="2">
            <Button x:Name="btnStartTimer" Content="Button" Height="84" Width="200" Click="btnStartTimer_Click"/>
        </Button>
        <Label x:Name="lblTimer" Content="00:00:00" HorizontalAlignment="Left" Margin="238,87,0,0" VerticalAlignment="Top" RenderTransformOrigin="-3.124,-0.423" Height="33" Width="92" Grid.Column="1"/>
        <Button x:Name="btnSubtract" Content="-" HorizontalAlignment="Left" Margin="6,72,0,0" VerticalAlignment="Top" Width="45" Click="btnSubtract_Click" Grid.Column="1"/>
        <Button x:Name="btnAdd" Content="+" HorizontalAlignment="Left" Margin="82,76,0,0" VerticalAlignment="Top" RenderTransformOrigin="1,-0.202" Height="22" Width="64" Click="btnAdd_Click" Grid.Column="1"/>

    </Grid>
</Window>
